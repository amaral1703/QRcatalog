<%- include('../partials/header') %>

<div class="container mt-5">
    <div class="jumbotron">
        <h1 class="display-4">Create New Product</h1>
        <p class="lead">Add a new product to your QR catalog.</p>
        <hr class="my-4">
    </div>

    <!-- Product Creation Form -->
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4>Product Details</h4>
                </div>
                <div class="card-body">
                    <form action="/products" method="POST">
                        <div class="form-group mb-3">
                            <label for="name">Product Name</label>
                            <input type="text" class="form-control" id="name" name="name" required>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label for="description">Description</label>
                            <textarea class="form-control" id="description" name="description" rows="3"></textarea>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label for="sku">SKU</label>
                            <input type="text" class="form-control" id="sku" name="sku" required>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label for="price">Price ($)</label>
                            <input type="number" step="0.01" class="form-control" id="price" name="price" required>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label for="qr_text">QR Code Text</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="qr_text" name="qr_text" required>
                                <button type="button" class="btn btn-outline-secondary" id="fillSku">Use SKU</button>
                                <button type="button" class="btn btn-outline-primary" id="fillJson">Use JSON</button>
                            </div>
                            <small class="form-text text-muted">This text will be encoded in the QR code. </small>
                        </div>
                        
                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-success">Create Product</button>
                            <a href="/" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/fillqrText.js"></script>


<%- include('../partials/footer') %>